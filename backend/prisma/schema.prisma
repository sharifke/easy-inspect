// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  password      String
  firstName     String
  lastName      String
  role          String       @default("INSPECTOR")
  companyName   String?
  phoneNumber   String?
  active        Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  inspections   Inspection[]

  @@map("users")
}

model InspectionTemplate {
  id              String            @id @default(uuid())
  name            String
  description     String?
  installationType String           // woning, kantoor, industrie
  active          Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  mainComponents  MainComponent[]
  inspections     Inspection[]

  @@map("inspection_templates")
}

model MainComponent {
  id              String              @id @default(uuid())
  templateId      String
  name            String
  description     String?
  sortOrder       Int                 @default(0)

  template        InspectionTemplate  @relation(fields: [templateId], references: [id], onDelete: Cascade)
  subComponents   SubComponent[]

  @@map("main_components")
}

model SubComponent {
  id                String              @id @default(uuid())
  mainComponentId   String
  name              String
  criterion         String              // Wat moet er ge√Ønspecteerd worden
  expectedOutcome   String?             // Verwachte uitkomst
  sortOrder         Int                 @default(0)
  requiresPhoto     Boolean             @default(false)

  mainComponent     MainComponent       @relation(fields: [mainComponentId], references: [id], onDelete: Cascade)
  results           InspectionResult[]

  @@map("sub_components")
}

model Inspection {
  id              String            @id @default(uuid())
  templateId      String
  inspectorId     String

  // Klant/locatie info
  clientName      String
  clientEmail     String?
  clientPhone     String?
  location        String
  address         String?
  city            String?
  postalCode      String?

  // Inspectie details
  status          String            @default("DRAFT")
  startedAt       DateTime?
  completedAt     DateTime?
  scheduledFor    DateTime?

  // Conclusie
  overallNotes    String?
  recommendations String?
  signatureData   String?           // Base64 encoded signature
  signedBy        String?
  signedAt        DateTime?

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  template        InspectionTemplate @relation(fields: [templateId], references: [id])
  inspector       User              @relation(fields: [inspectorId], references: [id])
  results         InspectionResult[]

  @@map("inspections")
}

model InspectionResult {
  id                String            @id @default(uuid())
  inspectionId      String
  subComponentId    String

  rating            Int               // 0-5 (0 = N.v.t.)
  classification    String?
  notes             String?

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  inspection        Inspection        @relation(fields: [inspectionId], references: [id], onDelete: Cascade)
  subComponent      SubComponent      @relation(fields: [subComponentId], references: [id])
  photos            Photo[]

  @@unique([inspectionId, subComponentId])
  @@map("inspection_results")
}

model Photo {
  id                  String            @id @default(uuid())
  inspectionResultId  String

  filename            String
  originalName        String
  mimeType            String
  size                Int               // bytes
  path                String            // relatief pad
  thumbnailPath       String?

  // Metadata
  gpsLatitude         Float?
  gpsLongitude        Float?
  takenAt             DateTime          @default(now())

  // Annotatie data (JSON as String)
  annotations         String?           // JSON: {arrows: [], circles: [], text: []}

  inspectionResult    InspectionResult  @relation(fields: [inspectionResultId], references: [id], onDelete: Cascade)

  @@map("photos")
}

model AuditLog {
  id          String    @id @default(uuid())
  userId      String?
  action      String    // CREATE, UPDATE, DELETE, LOGIN, etc.
  entity      String    // User, Inspection, Template, etc.
  entityId    String?
  details     String?   // JSON stored as String
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())

  @@map("audit_logs")
}
